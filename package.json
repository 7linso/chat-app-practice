{
  "name": "chat-app-practice",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "npm -w frontend run lint && npm -w backend run lint",
    "lint:fix": "npm -w frontend run lint:fix && npm -w backend run lint:fix",
    "format": "npm -w frontend run format && npm -w backend run format"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm -w frontend exec eslint -- --fix --cache --max-warnings=0",
      "npm -w frontend exec prettier -- --write"
    ],
    "backend/**/*.{js,ts,tsx}": [
      "npm -w backend exec eslint -- --fix --cache --max-warnings=0",
      "npm -w backend exec prettier -- --write"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
